<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:id="@+id/main_bottom_bar"
    android:layout_alignParentBottom="true"
    android:background="#f2f2f2">

    <RelativeLayout
        android:id="@+id/bottom_bar_account_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/bottom_bar_image_account"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_above="@id/bottom_bar_text_account"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/index_1"/>


        <TextView
            android:id="@+id/bottom_bar_text_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="账单"
            android:textColor="#666666"
            android:textSize="14sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom_bar_assets_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/bottom_bar_text_assets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="资产"
            android:textColor="#666666"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/bottom_bar_image_assets"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:contentDescription="@null"
            android:src="@drawable/index_2"
            android:layout_above="@id/bottom_bar_text_assets"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar_chart_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/bottom_bar_text_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="图表"
            android:textColor="#666666"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/bottom_bar_image_chart"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:contentDescription="@null"
            android:src="@drawable/index_3"
            android:layout_above="@id/bottom_bar_text_chart"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar_myinfo_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/bottom_bar_text_myinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="个人"
            android:textColor="#666666"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/bottom_bar_image_myinfo"
            android:layout_width="23dp"
            android:layout_height="12dp"
            android:layout_above="@id/bottom_bar_text_myinfo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="17dp"
            android:contentDescription="@null"
            android:src="@drawable/index_4" />
    </RelativeLayout>


</LinearLayout>