<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_main_item_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/box0" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider"
        android:showDividers="end"
        android:dividerPadding="1.5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_item_state"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="未确认"
                android:gravity="center"
                android:textSize="23sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="【箱号】"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_main_item_box_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:text="AAAA000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_item_box_from"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="未知地点"
                android:textSize="18sp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_main_item_box_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:text="0000-00-00 00:00:00"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>